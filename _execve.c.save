char *concact_path(char **args)
{
	char *path, **paths, *tok;
	int n = 0;

	path = get_env();
	tok = strtok(path, ":");

	while (tok != NULL)
	{
		paths[n] = tok;
		n++;
		tok = strtok(NULL, ":");
	}
	paths[n] = NULL;
	return paths;
}

